<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.ncmashd.mapper.CommentsMapper">
    <insert id="publishComment">
        INSERT into comments (userid,postid,commentContent,publishTime)
        VALUES (#{userid},#{postid},#{commentContent},#{publishTime})
    </insert>
</mapper>